<IfModule mod_rewrite.c>
  RewriteEngine on

  RewriteCond %{REQUEST_URI}::$1 ^(.*?/)(.*)::\2$
  RewriteRule ^(.*)$ - [E=BASE:%1]

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !=favicon.ico
  RewriteCond %{REQUEST_URI} !=/favicon.ico
  RewriteRule ^ index.php [L,QSA]
</IfModule>